<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Assets/css/bundles/styles")
    @Styles.Render("~/Assets/css/bundles/mainstyles")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="page-header-container">
        <header>
            <div class="header-top">
                <div class="container">
                    <div class="row">
                        <div class="pull-left">
                            <span>
                                <a href="@Url.Action("Index", "Home", new { Area = "Panel" })">Ga naar beheer</a>
                            </span>
                        </div>
                        <div class="pull-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="header-top__item">
                                    <a href="@Url.Action("Index", "Profile", new { Area = "Panel" })">Mijn Profiel</a>
                                </span>
                                <span class="header-top__item">
                                    <a href="@Url.Action("Index", "Logout")">Afmelden</a>
                                </span>
                            }
                            else
                            {
                                <span class="header-top__item">
                                    <a href="@Url.Action("Index", "Login")">Aanmelden</a>
                                </span>
                                <span class="header-top__item">
                                    <a href="@Url.Action("Index", "Register")">Registreren</a>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <nav class="header-nav">
                <div class="container">
                    <div class="row">
                        <a href="@Url.Action("Index", "Home")" class="col-md-2">
                            <h1>JeugdLocatie Booking</h1>
                        </a>
                        <ul class="col-md-4">
                            <li>
                                <a href="@Url.Action("Index", "Locations")">Locaties</a>
                            </li>
                        </ul>
                        <ul class="col-md-5 pull-right">
                            <li>
                                <a href="@Url.Action("Index", "Faq")">FAQ</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Partners")">Partners</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Contact")">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="pull-left page-title">@ViewBag.Title</h2>
                        <ul class="pull-right page-breadcrumbs">
                            @RenderSection("navbreadcrumb", required: false)
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            @if (TempData.ContainsKey("AlertType") && TempData.ContainsKey("AlertMessage"))
            {
                <div class="alert alert-@TempData["AlertType"] alert-dismissible" role="alert">
                    <a class="close" data-dismiss="alert">×</a>
                    <p>@TempData["AlertMessage"]</p>
                </div>
            }

            @RenderBody()
        </div>

        <div class="page-footer-container">
            <footer>
                <p>&copy; @DateTime.Now.Year - JeugdLocatie Booking</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/Assets/js/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
