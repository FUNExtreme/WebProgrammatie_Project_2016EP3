@{
    ViewBag.Title = "Contact";
}

@model YouthLocationBooking.Data.Validation.Models.ContactModel

@section styles {
    @Styles.Render("~/Assets/css/main/contact.css")
}

@section navbreadcrumb {
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="active">@ViewBag.Title</li>
}

<div class="page">
    <div class="row">
        <div class="shadowbox">
            @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="form-group row clearfix">
                    <i class="fa fa-envelope"></i>
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group row clearfix">
                    <i class="fa fa-envelope"></i>
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group row clearfix">
                    <i class="fa fa-envelope"></i>
                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                        @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group row clearfix">
                    <i class="fa fa-envelope"></i>
                    @Html.LabelFor(m => m.Message, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Message" })
                        @Html.ValidationMessageFor(m => m.Message, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send" class="button" />
                </div>
            }
        </div>
    </div>
</div>