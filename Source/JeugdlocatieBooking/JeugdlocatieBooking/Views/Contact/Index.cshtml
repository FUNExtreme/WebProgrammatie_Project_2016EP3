@{
    ViewBag.Title = "Contact";
}

@model YouthLocationBooking.Data.ViewModel.Models.ContactViewModel

@section styles {
    @Styles.Render("~/Assets/css/main/contact.css")
}

@section navbreadcrumb {
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="active">@ViewBag.Title</li>
}

<div class="page">
    <div class="row">
        <div class="shadowbox padding clearfix">
            <div class="col-md-9">
                <div class="sub-title">Contactformulier</div>
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "form-error" })
                    @Html.AntiForgeryToken()
                    <div class="form-group clearfix">
                        <i class="fa fa-user"></i>
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Uw Naam" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group clearfix">
                        <i class="fa fa-envelope"></i>
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Uw Email" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group clearfix">
                        <i class="fa fa-edit"></i>
                        @Html.LabelFor(m => m.Subject, new { @class = "col-md-4 form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Onderwerp" })
                            @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group clearfix">
                        <i class="fa fa-terminal"></i>
                        @Html.LabelFor(m => m.Message, new { @class = "col-md-4 form-label" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Bericht" })
                            @Html.ValidationMessageFor(m => m.Message, null, new { @class = "form-error" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Versturen" class="button" />
                    </div>
                }
            </div>
            <div class="col-md-3">
                <div class="sub-title padding">Adres</div>
                <address>
                    <ul>
                        <li>Gravenstraat 1a</li>
                        <li>9970 Kaprijke</li>
                        <li>Oost-Vlaanderen</li>
                        <li>Belgie</li>
                    </ul>
                </address>
                <div class="sub-title padding">Telefoon</div>
                <div>+32 4 73 42 04 35</div>
            </div>
        </div>
    </div>
</div>