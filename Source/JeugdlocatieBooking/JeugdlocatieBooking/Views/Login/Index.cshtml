@{
    ViewBag.Title = "Login";
}

@model YouthLocationBooking.Data.Validation.Models.LoginFormValidationModel

@section navbreadcrumb {
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="active">@ViewBag.Title</li>
}

@section styles {
    @Styles.Render("~/Content/css/auth.css")
}

<div class="content-group">
    <div class="inner">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <i class="fa fa-envelope"></i>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control__flat", placeholder="Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            
            <div class="form-group">
                <i class="fa fa-key"></i>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control__flat", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        }
    </div>
</div>