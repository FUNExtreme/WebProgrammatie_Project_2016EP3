@{
    ViewBag.Title = "Login";
}

@model YouthLocationBooking.Data.ViewModel.Models.LoginViewModel

@section styles {
    @Styles.Render("~/Assets/css/main/login.css")
}

@section navbreadcrumb {
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="active">@ViewBag.Title</li>
}

<div class="page">
    <div class="row">
        <div class="shadowbox">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="form-group clearfix">
                    <i class="fa fa-envelope"></i>
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8 no-padding">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group clearfix">
                    <i class="fa fa-key"></i>
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 form-label" })
                    <div class="col-md-8 no-padding">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "form-error" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Aanmelden" class="button" />
                </div>
            }
        </div>
    </div>
</div>