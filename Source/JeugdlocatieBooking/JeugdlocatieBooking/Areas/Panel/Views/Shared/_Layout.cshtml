<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Assets/css/bundles/styles")
    @Styles.Render("~/Assets/css/bundles/panelstyles")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="page-header-container">
        <header>
            <div class="header-top">
                <div class="container">
                    <div class="row">
                        <div class="pull-left">
                            <a href="@Url.Action("Index", "Home", new { Area = string.Empty })">Terug naar hoofdsite</a>
                        </div>
                        <div class="pull-right">
                            <span class="header-top__item">
                                <a href="@Url.Action("Index", "Profile")">Mijn Profiel</a>
                            </span>
                            <span class="header-top__item">
                                <a href="@Url.Action("Index", "Logout", new { Area = string.Empty })">Afmelden</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="header-nav">
                <div class="container">
                    <div class="row">
                        <a href="@Url.Action("Index", "Home")" class="col-md-2">
                            <h1>JeugdLocatie Booking</h1>
                        </a>
                        <div class="col-md-10 pull-right">
                            <div class="pull-right">
                                <div class="sub-title">Verhuurder</div>
                                <ul>
                                    <li>
                                        <a href="@Url.Action("Index", "Requests", new { Area = "Panel" })">Verzoeken</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "Locations", new { Area = "Panel" })">Mijn Locaties</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="pull-right">
                                <div class="sub-title">Huurder</div>
                                <ul>
                                    <li>
                                        <a href="@Url.Action("Index", "Summary", new { Area = "Panel" })">Overzicht</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "Reviews", new { Area = "Panel" })">Reviews</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="pull-left page-title">@ViewBag.Title</h2>
                        <ul class="pull-right page-breadcrumbs">
                            @RenderSection("navbreadcrumb", required: false)
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            @if (TempData.ContainsKey("AlertType") && TempData.ContainsKey("AlertMessage"))
            {
                <div class="alert alert-@TempData["AlertType"] alert-dismissible" role="alert">
                    <a class="close" data-dismiss="alert">×</a>
                    <p>@TempData["AlertMessage"]</p>
                </div>
            }

            @RenderBody()
        </div>

        <div class="page-footer-container">
            <footer>
                <p>&copy; @DateTime.Now.Year - JeugdLocatie Booking</p>
            </footer>
        </div>

        @Scripts.Render("~/Assets/js/bundles/scripts")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
